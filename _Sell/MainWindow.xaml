                <LineBreak /><LineBreak />
                    <TextBlock FontWeight="Bold">€ x,xx</TextBlock> <TextBlock FontStyle="Italic">W</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnGulaschsuppe" Grid.Row="0" Grid.Column="2" Click="btnGulaschsuppe_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>Chili con
                    <LineBreak />Carne<LineBreak />
                    <TextBlock FontWeight="Bold">€ 3,8</TextBlock> <TextBlock FontStyle="Italic">E</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnPunsch" Grid.Row="1" Grid.Column="0" Click="btnPunsch_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>
                    Heißer<LineBreak />
                    Löwe<LineBreak />
                    <TextBlock FontWeight="Bold">€ 3,50</TextBlock> <TextBlock FontStyle="Italic">A</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnKinderpunsch" Grid.Row="1" Grid.Column="1" Click="btnKinderpunsch_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>Kinder-
                    <LineBreak />punsch<LineBreak />
                    <TextBlock FontWeight="Bold">€ 2,50</TextBlock> <TextBlock FontStyle="Italic">S</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnHeisserLoewe" Grid.Row="1" Grid.Column="2" Click="btnHeisserLoewe_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>
                    Löwe w/<LineBreak />
                    Brüll<LineBreak />
                    <TextBlock FontWeight="Bold">€ 4,50</TextBlock> <TextBlock FontStyle="Italic">D</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnAufstrichBrot" Grid.Row="2" Grid.Column="0" Click="btnAufstrichBrot_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>
                    Aufstrich-<LineBreak />
                    brot<LineBreak />
                    <TextBlock FontWeight="Bold">€ 1,50</TextBlock> <TextBlock FontStyle="Italic">Y</TextBlock>
                </TextBlock></Button>
            <Button IsEnabled="False" Name="btnSoftdrinks" Grid.Row="2" Grid.Column="1" Click="btnSoftdrinks_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>Softdrinks 0,5l
                <LineBreak /><LineBreak /> 
                    <TextBlock FontWeight="Bold">€ 1,50</TextBlock> <TextBlock FontStyle="Italic">X</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnNone" Grid.Row="3" Grid.Column="2" Template="{StaticResource tplCubeButton}" Background="#FFFD790B"></Button>
            <Button Name="btnNone2" Grid.Row="3" Grid.Column="0" Template="{StaticResource tplCubeButton}" Background="#FFFD790B"></Button>
            <Button Name="btnSpeckstangerl" Grid.Row="2" Grid.Column="2" Click="btnSpeckstangerl_Click" Template="{StaticResource tplCubeButton}" Background="#FFFD790B">
                <TextBlock>Speckstangerl
                <LineBreak /><LineBreak />
                    <TextBlock FontWeight="Bold">€ 2,50</TextBlock> <TextBlock FontStyle="Italic">C</TextBlock>
                </TextBlock>
            </Button>
            <Button Name="btnGetraenke" Grid.Row="3" Grid.Column="1" Template="{StaticResource tplCubeButton}" Background="#FFFD790B" Click="btnGetraenke_Click">
                <TextBlock>Sonstiges
                <LineBreak /><LineBreak />
                    <TextBlock FontWeight="Bold">öffnen</TextBlock> <TextBlock FontStyle="Italic">V</TextBlock>
                </TextBlock>
            </Button>
