<Window x:Class="_Sell.Modal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Frage" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.125*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="0.75*" />  
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="0.125*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="2" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>
        <TextBlock Name="tbloCaption" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4">Error!</TextBlock>
        <TextBox Name="txtInput" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4"></TextBox>
        <Button Name="btnOK" Grid.Row="5" Grid.Column="2" Click="btnOK_Click" IsDefault="True">OK</Button>
        <Button Name="btnAbort" Grid.Row="5" Grid.Column="4" IsCancel="True">Abbrechen</Button>
    </Grid>
</Window>
